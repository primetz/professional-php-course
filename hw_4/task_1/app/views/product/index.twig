{% extends "base.twig" %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="product">
            <img src="{{ product.img }}" alt="{{ product.title }}" class="product__img" width="270" height="270">
            <div class="product__content">
                <h1 class="product__title">{{ product.title }}</h1>
                <p class="products__description">{{ product.description }}</p>
                <span class="product__price">Price: {{ product.price }} &dollar;</span>
                <button class="product__to-cart">To cart</button>
            </div>
        </div>
    </div>

{% endblock %}
